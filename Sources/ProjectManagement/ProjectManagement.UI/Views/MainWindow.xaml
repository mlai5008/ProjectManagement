<Window x:Class="ProjectManagement.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectManagement.UI"
        xmlns:view="clr-namespace:ProjectManagement.UI.Views"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="350"
        Width="550"
        FontSize="20"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <view:NavigationView Grid.Column="0" DataContext="{Binding Path=NavigationViewModel}"/>
        <view:DeveloperDetailView Grid.Column="1" DataContext="{Binding Path=DeveloperDetailViewModel}"/>
    </Grid>
</Window>
